<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="-2dp"
    android:background="@color/black"
    tools:context=".ui.view.CharacterDetailView">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        app:layout_constraintVertical_weight="1"
        android:layout_width="417dp"
        android:layout_height="409dp"
        android:background="@drawable/fondo_detail_view"
        android:translationZ="-2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profileCharacter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/esquinas_redondas"
                android:translationZ="-2dp"
                tools:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameCharacter"
            android:layout_width="378dp"
            android:layout_height="51dp"
            android:fontFamily="@font/roboto_black"
            android:paddingTop="13dp"
            android:text="INFORMACION DEL PERSONAJE"
            android:textAlignment="center"
            android:textColor="@color/blanco_transparente"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="0.797" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="360dp"
        android:layout_height="323dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Status"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/statusCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/estado_vivo"
                android:fontFamily="@font/roboto_black"
                android:gravity="start"
                android:paddingLeft="50dp"
                android:text="Status"
                android:textAlignment="textStart"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Type"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/typeCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="50dp"
                android:text="Type"
                android:textAlignment="textStart" />
        </TableRow>

        <TableRow android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Specie"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/specieCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="50dp"
                android:text="Specie"
                android:textAlignment="textStart"
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="origin"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/originCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="50dp"
                android:text="Origin"
                android:textAlignment="textStart"
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Location"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/locationCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="50dp"
                android:text="location"
                android:textAlignment="textStart"
                android:textSize="15sp" />
        </TableRow>

        <TableRow android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="gender"
                android:textAlignment="textStart"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/genderCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingLeft="50dp"
                android:text="gender"
                android:textAlignment="textStart"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>